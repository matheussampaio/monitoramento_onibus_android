<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.monitoramento_onibus"
    android:versionCode="1"
    android:versionName="1.0" >
    
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    
    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.WithActionBar" >
        
        <activity
            android:name="com.example.monitoramento_onibus.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.example.monitoramento_onibus.SettingsActivity"
            android:label="@string/action_settings"
            android:parentActivityName="com.example.monitoramento_onibus.MainActivity" >
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.example.monitoramento_onibus.MainActivity" />
        </activity>
        
        <activity
            android:name="com.example.monitoramento_onibus.HorariosActivity"
            android:label="@string/action_horarios"
            android:parentActivityName="com.example.monitoramento_onibus.MainActivity" >
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.example.monitoramento_onibus.MainActivity" />
        </activity>
        
    </application>

</manifest>
